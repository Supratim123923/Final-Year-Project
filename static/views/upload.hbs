    <!-- INPUT FILE SECTION ENDS  -->
    <div class="container">
      <div class="input_folder">
        <div>
          <h1>Upload Your File Here</h1>  
        </div>

        <div>
          <form id="uploadForm" enctype="multipart/form-data" action="/upload" method="post">  
          <input type="file" name="myfile" accept=".txt" /><br/><br/>  
          <input class="btn btn-primary" type="submit" value="Upload File" name="submit"><br/><br/>  
          <span id="status"></span>  
          </form>  
        </div>
        </div>
    </div>
  </body>  
</html>  